generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @unique
  name         String
  email        String  @unique
  password     String
  refreshToken String?

  shoppingLists ShoppingList[]
}

model ShoppingList {
  id        String   @id @unique
  userId    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}